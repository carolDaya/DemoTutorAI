{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Esquema de respuesta para Quiliano",
  "type": "object",
  "properties": {
    "General": {
      "type": "object",
      "properties": {
        "nombre_aprendiz": { "type": "string" },
        "duracion_total": { "type": "string" },
        "numero_interacciones": { "type": "integer" },
        "sentimiento": {
          "type": "string",
          "enum": [
            "inseguro",
            "confiado",
            "temeroso",
            "emocionado",
            "expectante"
          ]
        },
        "pegar_de_internet": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        }
      }
    },
    "Especifico": {
      "type": "object",
      "properties": {
        "comunidad_beneficiada": {
          "type": "array",
          "items": { "type": "string" }
        },
        "alcance_tipo": {
          "type": "string",
          "enum": ["barrio", "municipio", "departamento", "nacion"]
        },
        "alcance_lugar": { "type": "string" },
        "desafios_producto": { "type": "string" },
        "mvp": { "type": "string" },
        "busco_equipo": { "type": "string" },
        "descripcion_quiliano": { "type": "string" }        
      }
    }
  }
}
