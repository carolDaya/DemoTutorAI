{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Esquema de evaluación para Magnus con desempeño por competencia",
  "type": "object",
  "properties": {
    "General": {
      "type": "object",
      "properties": {        
        "nombre_aprendiz": {
          "type": "string"
        },
        "duracion_total": {
          "type": "string"
        },
        "numero_interacciones": {
          "type": "integer"
        },
        "sentimiento": {
          "type": "string",
          "enum": [
            "inseguro",
            "confiado",
            "temeroso",
            "emocionado",
            "expectante"
          ]
        },
        "pegar_de_internet": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        }
      }
    },
    "Especifico": {
      "type": "object",
      "properties": {
        "competencias": {
          "type": "object",
          "properties": {
            "Ideacion_y_Analisis": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "codigo": {
                    "type": "string"
                  },
                  "desempeno": {
                    "type": "string",
                    "enum": [
                      "no evaluado",
                      "muy bajo",
                      "bajo",
                      "básico",
                      "avanzado"
                    ]
                  }
                }
              }
            },
            "Diseno_y_Desarrollo": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "codigo": {
                    "type": "string"
                  },
                  "desempeno": {
                    "type": "string",
                    "enum": [
                      "no evaluado",
                      "muy bajo",
                      "bajo",
                      "básico",
                      "avanzado"
                    ]
                  }
                }
              }
            },
            "Calidad_y_Pruebas": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "codigo": {
                    "type": "string"
                  },
                  "desempeno": {
                    "type": "string",
                    "enum": [
                      "no evaluado",
                      "muy bajo",
                      "bajo",
                      "básico",
                      "avanzado"
                    ]
                  }
                }
              }
            },
            "Despliegue_y_Operacion": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "codigo": {
                    "type": "string"
                  },
                  "desempeno": {
                    "type": "string",
                    "enum": [
                      "no evaluado",
                      "muy bajo",
                      "bajo",
                      "básico",
                      "avanzado"
                    ]
                  }
                }
              }
            },
            "Presentacion_y_Comunicacion": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "codigo": {
                    "type": "string"
                  },
                  "desempeno": {
                    "type": "string",
                    "enum": [
                      "no evaluado",
                      "muy bajo",
                      "bajo",
                      "básico",
                      "avanzado"
                    ]
                  }
                }
              }
            }
          }
        },
        "lenguajes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "frameworks": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rol_backend": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "rol_frontend": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "rol_tester": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "rol_producto": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "equipo_fortalezas": {
          "type": "string"
        },
        "equipo_debilidades": {
          "type": "string"
        },
        "descripcion_magnus": {
          "type": "string"
        }        
      }
    }
  }
}